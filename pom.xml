        <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-surefire-plugin</artifactId>
      <version>2.16</version>
     
      <executions>
      
     
      
        <execution>
          <id>integration-test</id>
          <goals>
            <goal>test</goal>
          </goals>
